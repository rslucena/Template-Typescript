{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@shared/*": ["./src/shared/*"],
      "@tests/*": ["./src/tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules/**", ".docker/**", ".git/**", ".vscode/**", "dist/**"]
}

{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@shared/*": ["./src/shared/*"],
      "@tests/*": ["./src/tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/{.git, .docker, .vscode, node_modules, dist}/**"]
}

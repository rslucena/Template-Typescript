{
  "root": true,
  "globals": {},
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:drizzle/recommended"
